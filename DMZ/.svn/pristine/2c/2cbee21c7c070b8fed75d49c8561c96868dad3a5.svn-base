			}
			else
				cp=cp_list.get(la.getId());


			pd=new PropertyDialog();
			removeAll();
			//add(sp, BorderLayout.CENTER);
			//weka.gui.LogPanel lp = new weka.gui.LogPanel();
			//sp.setLog(lp);
			//add(lp, BorderLayout.SOUTH);

			cp.setRightPanel(this);
			cp.getClustererEditor().setRightPanel(this);
